<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCEE"
    tools:context=".CycleActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/cycle01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/lanbai"
                android:orientation="vertical">

                <TextView
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="二手山地自行车" />

                <TextView
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="这是一辆非常好的山地自行车，西南财经大学柳林校区，现价200元。QQ:1715835849" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <CalendarView
        android:layout_width="match_parent"
        android:background="@mipmap/tianlan_bg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">

    </CalendarView>



</LinearLayout>